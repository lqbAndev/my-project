@model WebBanSach.Models.AspNetUsers
@{
    ViewBag.Title = "MyAccout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="maincontent bg--white pt--80 pb--55">
    <div class="container">
        <div class="row" style="margin-top:150px">
            <div class="col-lg-3 col-12 md-mt-40 sm-mt-40">
                <div class="shop__sidebar">
                    <aside class="wedget__categories poroduct--cat">
                        <h3 class="wedget__title">Quản lý tài khoản</h3>
                        <ul>
                            <li><a href="#">Thông tin tài khoản</a></li>
                            <li><a href="@Url.Action("MyOder","Manage")">Đơn hàng></a></li>
                            <li><a href="@Url.Action("ChangePassword","Manage")">Đổi mật khẩu</a></li>
                          
                        </ul>
                    </aside>
                </div>
            </div>
            <div class="col-lg-9 col-12 md-mt-40 sm-mt-40">
                <div class="shop__sidebar">
                    <aside class="wedget__categories poroduct--cat">
                        <h3 class="wedget__title text-center">Thông tin tài khoản</h3>
                        <ul>
                            <li>Email:    @Model.Email</li>
                            <li>Phone:     @Model.PhoneNumber</li>
                        </ul>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</div>

